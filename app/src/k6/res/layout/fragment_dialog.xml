<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comm_backgroup2">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_480"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:layout_centerInParent="true"
            android:background="@drawable/comm_info_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_200"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_40"
                android:src="@drawable/main_call_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/call_center_confirm"
                    android:textColor="@color/txt_white"
                    android:textSize="@dimen/sp_32" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>

</RelativeLayout>