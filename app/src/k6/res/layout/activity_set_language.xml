<?xml version="1.0" encoding="utf-8"?>
<com.mili.smarthome.tkj.view.SetOperateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/window_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/set_main_tv_style"
        android:layout_width="@dimen/dp_320"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="left" />

    <View
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_110"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15" />


    <View
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/set_btn_style"
            android:gravity="center"
            android:text="@string/pub_cancel"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="@drawable/set_btn_style"
            android:gravity="center"
            android:text="@string/pub_confirm"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</com.mili.smarthome.tkj.view.SetOperateView>