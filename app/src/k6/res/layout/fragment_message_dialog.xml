<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comm_backgroup2">

    <RelativeLayout
        android:layout_width="@dimen/dp_480"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_above="@+id/lin_bottom_btn"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:layout_centerInParent="true"
            android:background="@drawable/comm_info_back"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_left_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:textColor="@color/txt_white"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/txt_white"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_20" />

            <com.mili.smarthome.tkj.widget.ScrollTextView
                android:id="@+id/tv_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minLines="4"
                android:maxLines="4"
                android:singleLine="false"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>