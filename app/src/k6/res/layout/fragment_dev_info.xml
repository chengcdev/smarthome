<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_devinfo"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_12"
                android:text="1/5"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8">

            <include
                android:id="@+id/devinfo_page_1"
                layout="@layout/layout_devinfo_1" />

            <include
                android:id="@+id/devinfo_page_2"
                layout="@layout/layout_devinfo_2" />

            <include
                android:id="@+id/devinfo_page_3"
                layout="@layout/layout_devinfo_3" />

            <include
                android:id="@+id/devinfo_page_4"
                layout="@layout/layout_devinfo_4" />

            <include
                android:id="@+id/devinfo_page_5"
                layout="@layout/layout_devinfo_5" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_pre_page"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_12"
            android:text="@string/setting_pre_page"
            android:background="@drawable/set_btn_style"/>

        <TextView
            android:id="@+id/tv_next_page"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_12"
            android:text="@string/setting_next_page"
            android:layout_marginLeft="@dimen/dp_50"
            android:background="@drawable/set_btn_style"/>

    </LinearLayout>

</RelativeLayout>