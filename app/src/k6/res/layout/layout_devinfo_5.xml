<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_system_version"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_face_version"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_version"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_chipver"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_buildver"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_mac"
            style="@style/devinfo_tv_style"/>

        <TextView
            android:id="@+id/tv_sn"
            style="@style/devinfo_tv_style"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/lin_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:id="@+id/img_sn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>