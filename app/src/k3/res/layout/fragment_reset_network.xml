<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/dp_256"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/setting_0402"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_page1"
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_161"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/vg_local"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_ip"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_local_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_subnet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_mask"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_subnet_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_gateway"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_gateway"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_gateway_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_dns"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_dns"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_dns_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_manager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_admin"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_manager_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_center_server"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_center_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_media_server"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_media_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_face"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_face_server"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_face_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_elevator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting_elevator"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_15" />

            <com.mili.smarthome.tkj.widget.FormatInputView
                android:id="@+id/tv_elevator_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                app:format="ip"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_15" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/white" />

    <FrameLayout
        android:id="@id/setting_content"
        android:layout_width="@dimen/dp_256"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:padding="@dimen/dp_8">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="left"
            android:background="@drawable/main_btn_bg"
            android:text="@string/pub_cancel"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="right"
            android:background="@drawable/main_btn_bg"
            android:text="@string/pub_confirm"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_15" />
    </FrameLayout>

    <com.mili.smarthome.tkj.setting.view.KeyHintView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:deletable="true"
        app:turnable="true" />
</LinearLayout>