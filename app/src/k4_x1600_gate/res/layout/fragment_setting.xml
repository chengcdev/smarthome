<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_175"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal">

        <com.mili.smarthome.tkj.setting.view.SetListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:listSelector="?attr/window_bg"/>

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_13"
            android:text="@string/set_hint1"
            android:drawableRight="@drawable/set_cancel_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_13"
            android:text="@string/set_hint2"
            android:drawableRight="@drawable/set_sure_icon"
            android:drawablePadding="@dimen/dp_3"/>

    </LinearLayout>

    <com.mili.smarthome.tkj.base.KeyboardCtrl
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="?attr/window_bg"
        android:keyBackground="@drawable/button_bg"/>

</LinearLayout>