<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WndAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- welcome theme -->
    <style name="WelcomeTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


    <!-- Base application theme.-->
    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WndAnimStyle</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--水波纹按钮-->
    <style name="RippleWhite">
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#FAFAFA</item>
        <item name="colorButtonNormal">#00FAFAFA</item>
        <item name="android:radius">50dp</item>
    </style>

    <style name="KeyBoardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KeyBoardIcon">
        <item name="android:layout_width">85px</item>
        <item name="android:layout_height">85px</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">250px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26px</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SettingLeftTvStyle">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26px</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SettingTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35px</item>
    </style>

    <style name="DeviceInfoTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/qb_px_25</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
