<?xml version="1.0" encoding="utf-8"?>
<com.mili.smarthome.tkj.main.widget.SetSuccessView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_back">

    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/SettingTitleStyle"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/tv_name"
            style="@style/SettingTextViewStyle"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_width="180dp"
            android:layout_marginLeft="20dp" />


        <com.mili.smarthome.tkj.set.widget.inputview.CustomInputView
            android:id="@+id/it_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

        </com.mili.smarthome.tkj.set.widget.inputview.CustomInputView>

    </RelativeLayout>


</com.mili.smarthome.tkj.main.widget.SetSuccessView>