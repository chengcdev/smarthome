<?xml version="1.0" encoding="utf-8"?>
<com.mili.smarthome.tkj.main.widget.SetSuccessView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            style="@style/SettingTitleStyle"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_title">

            <LinearLayout
                android:id="@+id/lin_list"
                android:layout_width="match_parent"
                android:layout_height="165px"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.mili.smarthome.tkj.main.widget.KeyBoardRecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.mili.smarthome.tkj.main.widget.KeyBoardRecyclerView>

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lin_volume_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_name"
                style="@style/SettingTextViewStyle"
               />

            <com.mili.smarthome.tkj.set.widget.inputview.CustomInputView
                android:id="@+id/it_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@+id/tv_name">

            </com.mili.smarthome.tkj.set.widget.inputview.CustomInputView>

        </LinearLayout>

    </RelativeLayout>


</com.mili.smarthome.tkj.main.widget.SetSuccessView>