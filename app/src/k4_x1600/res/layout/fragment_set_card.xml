<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/listview_header"/>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/txt_white"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/set_card_roomno"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_13"/>

            <com.mili.smarthome.tkj.widget.NumInputView
                android:id="@+id/tv_roomno"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:maxLength="4"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_14"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/set_card_cardno"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/sp_13"/>

            <com.mili.smarthome.tkj.widget.NumInputView
                android:id="@+id/tv_cardno"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:maxLength="8"
                app:textColor="@color/txt_white"
                app:textSize="@dimen/sp_13"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginStart="@dimen/dp_35"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/set_card_cardno"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/sp_13"/>

        <com.mili.smarthome.tkj.widget.NumInputView
            android:id="@+id/tv_cardno_area"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:maxLength="8"
            app:textColor="@color/txt_white"
            app:textSize="@dimen/sp_13"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_123"
        android:background="@color/txt_white"/>

    <include layout="@layout/listview_footer"
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_124"/>

</FrameLayout>